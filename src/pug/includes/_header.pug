include ../mixins/_mixins
header
    .b-header__top
        .b-top
            .b-top__logo
                .b-logo
                    img.b-logo__img(src="img/logo.png")
                .b-headermenu
                    + headermenu("home","Home")
                    + headermenu("aboutus","About us")
                    + headermenu("contacts","Contacts")

    .b-header__inform
        .b-inform
            .b-inform
                .b-inform__about
                    .b-about
                        img.b-about__img(src="img/logo.png")
                        h2.b-about__slogan
                        .b-about__line
                        p.b-about__text
                        .b-about__btn
                            a.b-btn__load(href="#") download
                block formheader
                    include ../includes/_formheader